<% include partials/header %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Edit Camp</h3>
  </div>
  <div class="panel-body">
    <form action="/campgrounds/<%= campground.id %>/update" method="post">
    <div class="form-group">
      <label for="">Name</label>
      <input type="text" name="name" class="form-control" id="" placeholder="name camp" value="<%= campground.name %>">
    </div>
    <div class="form-group">
      <label for="">Url Image</label>
      <input type="text" name="urlImage" class="form-control" id="" placeholder="Image Url" value="<%= campground.image %>">
    </div>
    <div class="form-group">
      <label for="">Description</label>
      <textarea name="description" class="form-control" rows="4"><%= campground.description %></textarea>
    </div>
  </div>
  <div class="panel-footer">
    <button type="submit" class="btn btn-primary btn-flat btn-block">Save</button>
  </form>
  </div>
</div>
